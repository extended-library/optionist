{
  "name": "optionry",
  "version": "0.0.0",
  "description": "Options weaponry. A powerful option parser utility.",
  "main": "index.js",
  "scripts": {
    "style:check": "standard --verbose | snazzy",
    "style:fix": "standard --fix",
    "gulp": "gulp --gulpfile tasks/index.js",
    "build": "echo BUILD",
    "mocha": "mocha test/cases/*.test.js test/cases/**/*.test.js",
    "test:src": "npm run style:check && cross-env MODULE=src npm run mocha",
    "test:dist": "npm run style:check && cross-env MODULE=dist npm run mocha",
    "test": "npm run test:src && npm run test:dist"
  },
  "keywords": [
    "option",
    "options",
    "option-parser",
    "options-parser",
    "options weaponry",
    "weaponry",
    "utility",
    "util",
    "tool"
  ],
  "author": "Richard King <richrdkng@gmail.com> (www.richrdkng.com)",
  "license": "ISC",
  "engines": {
    "node": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nodewell/optionry.git"
  },
  "bugs": {
    "url": "https://github.com/nodewell/optionry/issues"
  },
  "homepage": "https://github.com/nodewell/optionry#readme",
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "gulp": "^4.0.0",
    "mocha": "^6.1.4",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  }
}
